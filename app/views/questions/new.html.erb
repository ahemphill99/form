<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold text-gray-900">New Question for <%= @form.title %></h1>
        <%= link_to 'Back to Form', @form, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= render 'form', form: @form, question: @question %>
      </div>
    </div>
  </div>
</div>
