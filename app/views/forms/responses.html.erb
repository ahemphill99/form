<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-semibold text-gray-900">Responses for <%= @form.title %></h1>
        <div class="flex space-x-4">
          <%= link_to 'Back to Form', form_path(@form), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Form Responses</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          <%= @form.title %>
        </p>
      </div>

      <% if @responses.any? %>
        <div class="border-t border-gray-200">
          <% @responses.each do |response| %>
            <div class="bg-white px-4 py-5 sm:px-6 border-b border-gray-200">
              <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                <% @form.questions.each do |question| %>
                  <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">
                      <%= question.question_text %>
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900">
                      <%= (response.response_data || {})[question.id.to_s] || "No response" %>
                    </dd>
                  </div>
                <% end %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">
                    Submitted At
                  </dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= response.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </dd>
                </div>
              </dl>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="px-4 py-5 sm:px-6 text-center">
          <p class="text-sm text-gray-500">No responses yet.</p>
        </div>
      <% end %>
    </div>

    <div class="mt-4">
      <%= link_to "Back to Form", form_path(@form), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>
</div>
