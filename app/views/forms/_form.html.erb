<%= form_with(model: form) do |f| %>
  <% if form.errors.any? %>
    <div class="rounded-md bg-red-400/10 p-4 mb-6 ring-1 ring-red-400/20">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-400">
            <%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-400">
            <ul class="list-disc pl-5 space-y-1">
              <% form.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-white" %>
      <div class="mt-1">
        <%= f.text_field :title, class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", placeholder: "e.g., Customer Feedback Form" %>
      </div>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-white" %>
      <div class="mt-1">
        <%= f.text_area :description, rows: 3, class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", placeholder: "Describe what this form is for..." %>
      </div>
    </div>

    <div>
      <%= f.label :company_name, class: "block text-sm font-medium text-white" %>
      <div class="mt-1">
        <%= f.text_field :company_name, class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", placeholder: "Your company name" %>
      </div>
    </div>

    <div>
      <%= f.label :logo, class: "block text-sm font-medium text-white" %>
      <div class="mt-1 flex items-center gap-x-3">
        <% if form.logo.attached? %>
          <%= image_tag form.logo, class: "h-12 w-12 rounded-lg object-contain bg-gray-800 ring-1 ring-white/10" %>
        <% end %>
        <div class="relative">
          <%= f.file_field :logo, class: "block w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-emerald-500 file:text-white hover:file:bg-emerald-600 focus-visible:outline-none", accept: "image/png,image/jpeg,image/jpg" %>
          <p class="mt-1 text-xs text-gray-400">PNG, JPG or JPEG (max. 5MB)</p>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <h3 class="text-base font-semibold text-white">Form Customization</h3>
      
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :background_color, "Background Color", class: "block text-sm font-medium text-white" %>
          <div class="mt-1 relative rounded-md">
            <%= f.text_field :background_color, class: "block w-full rounded-md border-0 bg-gray-900 pl-3 pr-10 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", type: "color" %>
          </div>
        </div>

        <div>
          <%= f.label :font_color, "Text Color", class: "block text-sm font-medium text-white" %>
          <div class="mt-1 relative rounded-md">
            <%= f.text_field :font_color, class: "block w-full rounded-md border-0 bg-gray-900 pl-3 pr-10 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", type: "color" %>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :width, "Form Width (px)", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.number_field :width, class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", min: 1, max: 1200, placeholder: "600" %>
          </div>
        </div>

        <div>
          <%= f.label :height, "Form Height (px)", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.number_field :height, class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", min: 1, max: 2000, placeholder: "800" %>
          </div>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :completion_message, class: "block text-sm font-medium text-white" %>
      <div class="mt-1">
        <%= f.text_area :completion_message, rows: 3, class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus-visible:outline-none sm:text-sm sm:leading-6", placeholder: "Thank you for submitting the form!" %>
      </div>
    </div>

    <div class="flex justify-end space-x-4">
      <%= link_to forms_path, class: "inline-flex items-center text-sm font-medium text-gray-400 hover:text-white" do %>
        <svg class="mr-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd" />
        </svg>
        Cancel
      <% end %>
      <%= f.button type: "submit", class: "inline-flex items-center rounded-md bg-emerald-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-500" do %>
        Save Form
        <svg class="ml-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>
<% end %>
