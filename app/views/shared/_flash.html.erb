<%# Flash messages with Tailwind CSS styling %>
<% flash.each do |type, message| %>
  <% if message.present? %>
    <div class="fixed inset-x-0 top-4 flex items-center justify-center px-4 py-6 pointer-events-none sm:p-6 sm:items-start sm:justify-end z-50"
         data-controller="alert"
         data-alert-dismiss-after-value="3000"
         data-alert-remove-delay-value="1000"
         data-alert-show-class="translate-y-0 opacity-100 sm:translate-x-0"
         data-alert-hide-class="translate-y-2 opacity-0 sm:translate-x-1">
      <div class="max-w-sm w-full shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden
                  <%= type.to_s == 'notice' ? 'bg-emerald-500' : 'bg-red-500' %>">
        <div class="p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if type.to_s == 'notice' %>
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              <% else %>
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              <% end %>
            </div>
            <div class="ml-3 w-0 flex-1">
              <p class="text-sm font-medium text-white">
                <%= message %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0 flex">
              <button type="button"
                      class="inline-flex text-white hover:text-white/80 focus:outline-none focus:ring-2 focus:ring-white"
                      data-action="click->alert#close">
                <span class="sr-only">Close</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
