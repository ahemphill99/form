<div class="bg-gray-900 min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="text-center text-3xl font-bold tracking-tight text-white">Sign in to your account</h2>
    <p class="mt-2 text-center text-sm text-gray-400">
      Or
      <%= link_to "start your 14-day free trial", new_registration_path(resource_name), class: "font-medium text-emerald-400 hover:text-emerald-300" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-gray-800 py-8 px-4 shadow-xl ring-1 ring-white/10 sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-white" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus:outline-none sm:text-sm sm:leading-6", 
                placeholder: "you@example.com" %>
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, class: "block text-sm font-medium text-white" %>
            <div class="text-sm">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-emerald-400 hover:text-emerald-300" %>
            </div>
          </div>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "current-password", 
                class: "block w-full rounded-md border-0 bg-gray-900 px-3 py-2.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-emerald-500 focus:outline-none sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 bg-gray-900 accent-emerald-500 focus:ring-1 focus:ring-emerald-500 focus:ring-offset-0 focus:ring-offset-transparent focus:outline-none" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-300" %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "flex w-full justify-center rounded-md bg-emerald-500 px-3 py-2.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-emerald-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-500" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-white/10"></div>
          </div>
          <div class="relative flex justify-center text-sm font-medium leading-6">
            <span class="bg-gray-800 px-6 text-gray-300">Or continue with</span>
          </div>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
