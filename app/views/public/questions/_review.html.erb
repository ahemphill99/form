<div class="space-y-4">
  <h2 class="text-lg font-semibold">Review Your Responses</h2>
  <% @questions.each do |question| %>
    <div class="rounded-lg p-4" style="background-color: <%= color_with_opacity(@form.background_color || '#ffffff', 0.5) %>">
      <div class="mb-2 font-medium"><%= question.question_text %></div>
      <div class="text-sm response-preview" data-question-id="<%= question.id %>">
        Not answered yet
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6 flex justify-between">
  <button type="button" 
          class="prev-button rounded-md bg-gray-200 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-300">
    Edit Responses
  </button>
  <%= f.submit "Submit Form", 
      class: "rounded-md bg-emerald-500 px-4 py-2 text-sm font-semibold text-white hover:bg-emerald-600" %>
</div>
