<div class="space-y-6">
  <div>
    <div class="flex justify-between items-center">
      <h3 class="text-lg font-medium leading-6 text-gray-900">
        Review Your Answers
      </h3>
      <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
        Final Step
      </span>
    </div>

    <div class="mt-6 space-y-6">
      <% form.questions.each do |question| %>
        <div class="border-t border-gray-200 pt-6">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="text-sm font-medium text-gray-900">
                <%= question.question_text %>
                <% if question.required? %>
                  <span class="text-red-500">*</span>
                <% end %>
              </h4>
              <p class="mt-1 text-sm text-gray-600">
                <%= responses[question.id.to_s] || "No response" %>
              </p>
            </div>
            <%= link_to "Edit", public_form_question_path(form.public_token, question), 
                class: "text-sm text-indigo-600 hover:text-indigo-900",
                data: { turbo_frame: "_top" } %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex justify-between">
      <%= link_to "Back", public_form_question_path(form.public_token, form.questions.last),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          data: { turbo_frame: "_top" } %>

      <%= form_tag submit_public_form_path(form.public_token), data: { turbo_frame: "_top" } do %>
        <%= submit_tag "Submit Form",
            class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>
    </div>
  </div>
</div>
