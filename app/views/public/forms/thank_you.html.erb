<div class="w-full min-h-full flex items-center justify-center" style="background-color: <%= @form.background_color || '#ffffff' %>; color: <%= @form.font_color || '#000000' %>">
  <div class="text-center px-4 py-12">
    <% if @form.logo.attached? %>
      <div class="mb-6">
        <%= image_tag @form.logo, class: "max-h-20 mx-auto object-contain" %>
      </div>
    <% end %>
    
    <div class="mb-4">
      <h2 class="text-2xl font-semibold"><%= @form.completion_message %></h2>
    </div>
  </div>
</div>
